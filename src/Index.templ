package main

import "fmt"

templ Index(allNote map[uint]string) {
	<!DOCTYPE html>
	<html>
	<head>
	<title>Notes</title>
	<link rel="stylesheet" href="/assets/ind.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
	
	<h1>Notes</h1>
		<form action="/add" method="post">
			<input class="textbox" type="text" name="note" placeholder="Note" maxlength="100" autofocus required> 
			<input class="btn" type="submit" value="add">
		</form>
		<table>
			<tr>
				<th>id</th>
				<th colspan="2">Note</th>
			</tr>
				for k, v := range allNote {
					<tr>
						<td class="c-td">{fmt.Sprintln(k)}</td>
						<td class="full">{v}</td>
						<td class="c-td"> <a href={ templ.URL(fmt.Sprintf("/del?id=%d", k)) }>delete</a> </td>
					</tr>
				}
		</table>
	</body>
	</html> 
}

