templ Redirect(url string) {
	<!DOCTYPE html>
	<html>
	<head>
			<link rel="stylesheet" href="/assets/ind.css">
			<meta http-equiv="refresh" content={ fmt.Sprintf("0; url=%s", url) }>
	</head>
	<body>
		<a href={ templ.URL(url) }>redirect in a sec</a>
	</body>
	</html>
}
